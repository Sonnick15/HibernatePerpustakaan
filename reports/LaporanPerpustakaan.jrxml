<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports
              http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="LaporanPerpustakaan" pageWidth="595" pageHeight="842"
              columnWidth="555" leftMargin="20" rightMargin="20"
              topMargin="20" bottomMargin="20">

    <!-- FIELD DEFINITIONS -->
    <field name="id" class="java.lang.Integer"/>
    <field name="judul" class="java.lang.String"/>
    <field name="penulis" class="java.lang.String"/>
    <field name="kategori" class="java.lang.String"/>
    <field name="tahun" class="java.lang.Integer"/>

    <!-- TITLE -->
    <title>
        <band height="70">
            <staticText>
                <reportElement x="0" y="10" width="555" height="30"/>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="20" isBold="true"/>
                </textElement>
                <text><![CDATA[LAPORAN DATA BUKU PERPUSTAKAAN]]></text>
            </staticText>
            <staticText>
                <reportElement x="0" y="45" width="555" height="20"/>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="12"/>
                </textElement>
                <text><![CDATA[Perpustakaan Umum]]></text>
            </staticText>
            <line>
                <reportElement x="0" y="68" width="555" height="1"/>
                <graphicElement>
                    <pen lineWidth="2.0"/>
                </graphicElement>
            </line>
        </band>
    </title>

    <!-- COLUMN HEADER -->
    <columnHeader>
        <band height="30">
            <staticText>
                <reportElement x="0" y="0" width="40" height="30" mode="Opaque" backcolor="#CCCCCC"/>
                <box>
                    <pen lineWidth="1.0"/>
                </box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="10" isBold="true"/>
                </textElement>
                <text><![CDATA[ID]]></text>
            </staticText>

            <staticText>
                <reportElement x="40" y="0" width="160" height="30" mode="Opaque" backcolor="#CCCCCC"/>
                <box><pen lineWidth="1.0"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="10" isBold="true"/>
                </textElement>
                <text><![CDATA[JUDUL]]></text>
            </staticText>

            <staticText>
                <reportElement x="200" y="0" width="130" height="30" mode="Opaque" backcolor="#CCCCCC"/>
                <box><pen lineWidth="1.0"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="10" isBold="true"/>
                </textElement>
                <text><![CDATA[PENULIS]]></text>
            </staticText>

            <staticText>
                <reportElement x="330" y="0" width="140" height="30" mode="Opaque" backcolor="#CCCCCC"/>
                <box><pen lineWidth="1.0"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="10" isBold="true"/>
                </textElement>
                <text><![CDATA[KATEGORI]]></text>
            </staticText>

            <staticText>
                <reportElement x="470" y="0" width="85" height="30" mode="Opaque" backcolor="#CCCCCC"/>
                <box><pen lineWidth="1.0"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="10" isBold="true"/>
                </textElement>
                <text><![CDATA[TAHUN]]></text>
            </staticText>
        </band>
    </columnHeader>

    <!-- DETAIL -->
    <detail>
        <band height="30">
            <textField>
                <reportElement x="0" y="0" width="40" height="30"/>
                <box><pen lineWidth="1.0"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle"/>
                <textFieldExpression><![CDATA[$F{id}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="40" y="0" width="160" height="30"/>
                <box><pen lineWidth="1.0"/></box>
                <textElement verticalAlignment="Middle">
                    <font size="10"/>
                    <paragraph leftIndent="5"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{judul}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="200" y="0" width="130" height="30"/>
                <box><pen lineWidth="1.0"/></box>
                <textElement verticalAlignment="Middle">
                    <font size="10"/>
                    <paragraph leftIndent="5"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{penulis}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="330" y="0" width="140" height="30"/>
                <box><pen lineWidth="1.0"/></box>
                <textElement verticalAlignment="Middle">
                    <font size="10"/>
                    <paragraph leftIndent="5"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{kategori}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="470" y="0" width="85" height="30"/>
                <box><pen lineWidth="1.0"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle"/>
                <textFieldExpression><![CDATA[$F{tahun}]]></textFieldExpression>
            </textField>
        </band>
    </detail>

    <!-- FOOTER -->
    <pageFooter>
        <band height="30">
            <line>
                <reportElement x="0" y="5" width="555" height="1"/>
            </line>
            <textField>
                <reportElement x="0" y="10" width="280" height="20"/>
                <textElement>
                    <font size="9"/>
                </textElement>
                <textFieldExpression><![CDATA["Dicetak pada: " + new java.text.SimpleDateFormat("dd/MM/yyyy HH:mm:ss").format(new java.util.Date())]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="455" y="10" width="100" height="20"/>
                <textElement textAlignment="Right">
                    <font size="9"/>
                </textElement>
                <textFieldExpression><![CDATA["Halaman " + $V{PAGE_NUMBER}]]></textFieldExpression>
            </textField>
        </band>
    </pageFooter>

</jasperReport>

